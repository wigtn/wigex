# ===========================================
# Travel Helper v2.0 - Environment Variables
# ===========================================

# API Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/travel_helper

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Provider (self-hosted | openai | groq | anthropic)
AI_PROVIDER=groq
AI_SERVICE_URL=http://localhost:8000

# OpenAI (if using openai provider)
OPENAI_API_KEY=sk-...

# Groq (if using groq provider)
GROQ_API_KEY=gsk_...

# Anthropic (if using anthropic provider)
ANTHROPIC_API_KEY=sk-ant-...

# Exchange Rate API
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Apple Sign In (for mobile)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Google Sign In (for mobile)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Sentry (error tracking)
SENTRY_DSN=

# AWS S3 (image storage - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=

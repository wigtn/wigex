# ===========================================
# Database (Supabase PostgreSQL)
# ===========================================
# Transaction pooler (port 6543) - for app runtime
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-ap-northeast-2.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (port 5432) - for Prisma migrations
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-ap-northeast-2.pooler.supabase.com:5432/postgres"

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# AI Service
# ===========================================
# Provider: self-hosted | openai | groq
AI_PROVIDER="groq"

# OpenAI (if AI_PROVIDER=openai)
OPENAI_API_KEY=""

# Groq (if AI_PROVIDER=groq)
GROQ_API_KEY=""

# Self-hosted AI service URL (if AI_PROVIDER=self-hosted)
AI_SERVICE_URL="http://localhost:8000"

# ===========================================
# App Settings
# ===========================================
PORT=3000
NODE_ENV="development"

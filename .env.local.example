# ===========================================
# Travel Helper - LOCAL Environment
# ===========================================
# 로컬 개발용 (Docker Compose로 DB만 실행)
# cp .env.local.example .env

NODE_ENV=development
PORT=3000

# Database (Local Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/travel_helper
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/travel_helper

# JWT (로컬 개발용)
JWT_SECRET=local-dev-jwt-secret-key-min-32-characters-here
JWT_REFRESH_SECRET=local-dev-jwt-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# AI Provider
AI_PROVIDER=groq
AI_SERVICE_URL=http://localhost:8000
GROQ_API_KEY=gsk_your_groq_api_key_here

# CORS (로컬 개발)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8081,exp://localhost:8081

# URLs
API_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Queue (로컬에서는 동기 처리 - SQS 비활성화)
QUEUE_PROVIDER=sync

# AWS (로컬 테스트용 - optional)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Exchange Rate API
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Social Login (optional)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Sentry (optional)
SENTRY_DSN=

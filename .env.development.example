# ===========================================
# Travel Helper - DEVELOPMENT Environment (AWS)
# ===========================================
# AWS 프리티어 개발 서버용
# EC2에 복사: /opt/travel-helper/.env

NODE_ENV=development
PORT=3000

# Domain (개발용 서브도메인)
DOMAIN=dev.your-domain.com

# Database (AWS RDS 또는 EC2 내부 Docker)
# 프리티어: db.t3.micro (RDS) 또는 EC2 내 Docker PostgreSQL
POSTGRES_USER=travel_helper_dev
POSTGRES_PASSWORD=CHANGE_ME_DEV_PASSWORD
POSTGRES_DB=travel_helper_dev
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DIRECT_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# JWT (개발용 - 프로덕션과 다른 키 사용)
JWT_SECRET=dev-jwt-secret-change-me-min-32-characters
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-change-me-32chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# AI Provider
AI_PROVIDER=groq
AI_SERVICE_URL=http://ai-service:8000
GROQ_API_KEY=gsk_your_groq_key

# CORS
CORS_ORIGIN=https://admin.dev.your-domain.com,https://dev.your-domain.com

# URLs
API_URL=https://api.dev.your-domain.com
ADMIN_URL=https://admin.dev.your-domain.com

# AWS SQS (개발용 큐)
QUEUE_PROVIDER=sqs
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/YOUR_ACCOUNT_ID/travel-helper-dev-queue
AWS_SQS_DLQ_URL=https://sqs.ap-northeast-2.amazonaws.com/YOUR_ACCOUNT_ID/travel-helper-dev-dlq

# AWS S3 (이미지 저장)
AWS_S3_BUCKET=travel-helper-dev-assets

# Exchange Rate API
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Social Login (optional for dev)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Sentry (optional for dev)
SENTRY_DSN=

# GitHub Container Registry
REGISTRY=ghcr.io/your-username/wigtn-travel-helper
IMAGE_TAG=latest

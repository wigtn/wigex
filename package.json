{
  "name": "wigtn-travel-helper",
  "version": "3.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "mobile": "pnpm --filter @wigtn/mobile",
    "api": "pnpm --filter @wigtn/api",
    "shared": "pnpm --filter @wigtn/shared",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules .turbo apps/*/.turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:prod:up": "docker compose -f docker/docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker compose -f docker/docker-compose.prod.yml down",
    "db:migrate": "pnpm --filter @wigtn/api prisma:migrate",
    "db:push": "pnpm --filter @wigtn/api prisma:push",
    "db:studio": "pnpm --filter @wigtn/api prisma:studio",
    "db:generate": "pnpm --filter @wigtn/api prisma:generate"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.4.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}

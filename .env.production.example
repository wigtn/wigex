# ===========================================
# Travel Helper - PRODUCTION Environment (AWS)
# ===========================================
# AWS 프리티어 프로덕션 서버용
# EC2에 복사: /opt/travel-helper/.env

NODE_ENV=production
PORT=3000

# Domain (프로덕션 도메인)
DOMAIN=your-domain.com

# Database (AWS RDS 또는 EC2 내부 Docker)
POSTGRES_USER=travel_helper
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PRODUCTION_PASSWORD
POSTGRES_DB=travel_helper
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DIRECT_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# JWT (프로덕션용 - 강력한 키 사용)
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_SECURE_REFRESH_SECRET_32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Provider
AI_PROVIDER=groq
AI_SERVICE_URL=http://ai-service:8000
GROQ_API_KEY=gsk_your_production_groq_key
OPENAI_API_KEY=

# CORS
CORS_ORIGIN=https://admin.your-domain.com,https://your-domain.com

# URLs
API_URL=https://api.your-domain.com
ADMIN_URL=https://admin.your-domain.com

# AWS SQS (프로덕션 큐)
QUEUE_PROVIDER=sqs
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/YOUR_ACCOUNT_ID/travel-helper-prod-queue
AWS_SQS_DLQ_URL=https://sqs.ap-northeast-2.amazonaws.com/YOUR_ACCOUNT_ID/travel-helper-prod-dlq

# AWS S3 (이미지 저장)
AWS_S3_BUCKET=travel-helper-prod-assets

# Exchange Rate API
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Social Login
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Sentry (프로덕션 필수)
SENTRY_DSN=

# GitHub Container Registry
REGISTRY=ghcr.io/your-username/wigtn-travel-helper
IMAGE_TAG=latest
